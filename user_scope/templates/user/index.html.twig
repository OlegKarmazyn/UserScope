{% extends 'base.html.twig' %}

{% block title %}List of users{% endblock %}

{% block body %}
    <h1>List of users</h1>
    <ul>
        {% for user in users %}
            <li>
                {{ user.username }} - Roles: {{ user.roles|join(', ') }}
                <a href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}